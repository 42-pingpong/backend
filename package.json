  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "TZ=Asia/Seoul jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "TZ=Asia/Seoul jest --config ./test/jest-e2e.json --verbose --detectOpenHandles",
    "seed": "jest --config ./test/jest-e2e.json --verbose --testRegex seed.e2e-spec.ts --detectOpenHandles --runInBand"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
