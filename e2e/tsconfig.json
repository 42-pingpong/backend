{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@app/common": [
        "../libs/common/src"
      ],
      "@app/common/*": [
        "../libs/common/src/*"
      ],
      "@apps/restapis" : [
        "../apps/restapis/src"
      ],
      "@apps/restapis/*" : [
        "../apps/restapis/src/*"
      ]
    }
  },
  "include": ["**/*.e2e-spec.ts"]
}